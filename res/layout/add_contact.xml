<AbsoluteLayout
	android:id="@+id/addContactView"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView
		android:id="@+id/tvAddContact"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Add Contact"
		android:textStyle="bold"
		android:layout_x="5px"
		android:layout_y="8px">
	</TextView>
	
	<TextView
		android:id="@+id/tvContactName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Contact Name"
		android:layout_x="15px"
		android:layout_y="46px">
	</TextView>
	
	<EditText
		android:id="@+id/etContactName"
		android:layout_width="178px"
		android:layout_height="45px"
		android:textSize="18sp"
		android:layout_x="11px"
		android:layout_y="66px">
	</EditText>

	<TextView
		android:id="@+id/tvNebulaID"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Nebula ID"
		android:layout_x="14px"
		android:layout_y="120px">
	</TextView>

	<EditText
		android:id="@+id/etNebulaID"
		android:layout_width="178px"
		android:layout_height="45px"
		android:textSize="18sp"
		android:layout_x="11px"
		android:layout_y="145px">
	</EditText>

	<Button
		android:id="@+id/bAddContact"
		android:layout_width="70px"
		android:layout_height="40px"
		android:text="Add"
		android:layout_x="170px" 
		android:layout_y="330px"
		android:onClick="doAddContact">
	</Button>
	
	<Button
		android:id="@+id/bBack"
		android:layout_width="70px"
		android:layout_height="40px"
		android:text="Back"
		android:layout_x="240px"
		android:layout_y="330px"
		android:onClick="doBack">
	</Button>
	
	<TextView
		android:id="@+id/tvSelectGroup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Select Group"
		android:layout_x="14px"
		android:layout_y="192px">
	</TextView>
	
	<Button 
		android:id="@+id/bSelectGroups" 
		android:layout_height="50px" 
		android:text="Select" 
		android:layout_x="200dip" 
		android:layout_width="100px" 
		android:layout_y="235dip"
		android:onClick="doSelectGroups">
	</Button>
	
	<EditText 
		android:id="@+id/etSelectedGroups" 
		android:layout_x="12dip" 
		android:layout_y="215dip" 
		android:layout_height="100px" 
		android:layout_width="180px" 
		android:enabled="false">
	</EditText>

	<TextView 
		android:id="@+id/tvNebulaDomain" 
		android:text="nebula.com" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_x="190dip" 
		android:layout_y="155dip">
	</TextView>
	
</AbsoluteLayout>
